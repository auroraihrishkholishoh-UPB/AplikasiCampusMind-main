<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_background">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back ðŸ‘‹"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/cm_text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Masuk untuk mulai konseling di Campus Mind"
        android:textColor="@color/cm_text_secondary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/card_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cm_card_bg"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:clipToPadding="false"
        android:clipToOutline="false"
        app:layout_constraintTop_toBottomOf="@id/txt_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/cm_text_primary"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/cm_text_primary"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_input"
            android:paddingHorizontal="12dp"
            android:inputType="textPassword"
            android:layout_marginTop="6dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            android:backgroundTint="@color/cm_slate_blue"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_go_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum punya akun? Daftar di sini"
        android:textColor="@color/cm_soft_teal"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/card_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
