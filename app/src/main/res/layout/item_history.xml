<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_history_item"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Tipe Session -->
    <TextView
        android:id="@+id/tv_session_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat AI"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#333333" />

    <!-- Waktu Session -->
    <TextView
        android:id="@+id/tv_session_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Nov 2025, 19:30"
        android:textSize="13sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp" />

    <!-- Pesan Terakhir -->
    <TextView
        android:id="@+id/tv_session_last_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last message preview goes here..."
        android:textSize="14sp"
        android:textColor="#444444"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="6dp" />

    <!-- Status Session -->
    <TextView
        android:id="@+id/tv_session_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISHED"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="6dp" />

    <!-- Rating Bintang -->
    <RatingBar
        android:id="@+id/rb_session_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_marginTop="4dp"/>
</LinearLayout>
