<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_chat_ai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/top_bar_ai"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Chat"
            android:textColor="#2E3A59"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Chat list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_ai"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_ai"
        app:layout_constraintBottom_toTopOf="@id/bottom_input_ai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom input -->
    <LinearLayout
        android:id="@+id/bottom_input_ai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_message_ai"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Tulis pesan..."
            android:paddingHorizontal="12dp"
            android:backgroundTint="@android:color/transparent"
            android:textColor="#2E3A59"
            android:textColorHint="#B0B7C5" />

        <ImageButton
            android:id="@+id/btn_send_ai"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#4F668B"
            android:contentDescription="Kirim" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
