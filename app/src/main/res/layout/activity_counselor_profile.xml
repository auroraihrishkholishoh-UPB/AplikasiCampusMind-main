<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_background">

    <LinearLayout
        android:id="@+id/layout_header_counselor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingVertical="24dp"
        android:background="@color/cm_card_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/txt_counselor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Konselor"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/cm_text_primary"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/txt_counselor_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Psikolog Klinis"
            android:textColor="@color/cm_text_secondary"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cm_card_bg"
        android:padding="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_header_counselor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengalaman"
            android:textColor="@color/cm_text_secondary"/>

        <TextView
            android:id="@+id/txt_counselor_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 tahun mendampingi mahasiswa"
            android:textColor="@color/cm_text_primary"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btn_start_counseling"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Mulai Konseling"
            android:textAllCaps="false"
            android:backgroundTint="@color/cm_slate_blue"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
