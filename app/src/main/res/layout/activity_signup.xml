<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cm_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_title_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Akun Baru"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/cm_text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:id="@+id/card_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cm_card_bg"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/txt_title_signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="@color/cm_text_primary"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textColor="@color/cm_text_primary"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/et_nim"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/cm_text_primary"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="6dp"
                android:inputType="textEmailAddress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/cm_text_primary"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="6dp"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Buat Akun"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="@color/cm_soft_teal"
                android:textColor="@android:color/white"
                android:layout_marginTop="18dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
